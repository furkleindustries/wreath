{
  "name": "wreath",
  "version": "0.1.0",
  "description": "A basic static analysis tool for Twine, compatible with the Sugarcane, Sugarcube, Harlowe, and Gately formats.",
  "main": "index.js",
  "scripts": {
    "build": "webpack --show-modules",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test-watch": "jest --watch",
    "test-coverage-watch": "jest --watch --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/furkleindustries/wreath.git"
  },
  "keywords": [
    "wreath",
    "twine",
    "twine2",
    "lint",
    "linter",
    "linting",
    "harlowe",
    "sugarcane",
    "sugarcube",
    "gately"
  ],
  "author": "furkle",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/furkleindustries/wreath/issues"
  },
  "homepage": "https://github.com/furkleindustries/wreath#readme",
  "devDependencies": {
    "@types/css": "0.0.31",
    "@types/escodegen": "0.0.6",
    "@types/esprima": "^4.0.1",
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.58",
    "@types/semver": "^5.4.0",
    "awesome-typescript-loader": "^3.4.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-typescript": "^7.0.0-beta.3",
    "jest": "^21.2.1",
    "pegjs": "^0.10.0",
    "ts-jest": "^21.2.4",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "escodegen": "^1.9.0",
    "ifid": "^0.1.1",
    "immutable": "^3.8.2",
    "node-like": "^0.1.0",
    "semver": "^5.4.1",
    "twine-tree": "^0.1.1"
  },
  "jest": {
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/*"
    ]
  }
}
